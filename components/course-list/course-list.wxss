.course-container {
    margin: 5rpx 5rpx;
    padding: 5rpx;
    border-bottom: 3px solid red;
    box-sizing: border-box;
    width: 100%;
    height: 200rpx;
    display: flex;

}
.course-container image{
    width: 300rpx;
    height: 100%;
}

.course-container view {
    margin: 0 10rpx;
    display: flex;
    flex-direction: column;
    justify-content: space-around;
    font-size: 24rpx;
}
.course-container view text:nth-child(1) {
    font-size: 34rpx;
    font-weight: bolder;
}
.course-container view text:nth-child(3) {
    color: red;
}